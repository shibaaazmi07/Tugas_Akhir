<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_rs">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_detailRS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_detailnamaRS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="serif-monospace"
                android:text="Nama Rumah Sakit "
                android:textAlignment="center"
                android:textColor="#090909"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:autoLink="web"
                android:fontFamily="monospace"
                android:text="Website resmi RS "
                android:textColor="#090909"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_detail_keteranganRS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:fontFamily="monospace"
                android:text="Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit Detail Rumah Sakit  "
                android:textColor="#090909"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_alamatRS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="alamat"
                android:fontFamily="monospace"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"


            />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>