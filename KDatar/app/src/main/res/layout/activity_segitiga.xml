<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Segitiga">

    <TextView
        android:id="@+id/judulsegitiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Perhitungan Segitiga"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/alas1"
        android:layout_width="371dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:hint="Alas A"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulsegitiga" />

    <EditText
        android:id="@+id/alas2"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:hint="Alas B"
        android:textColor="@color/black"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alas1" />

    <EditText
        android:id="@+id/alas3"
        android:layout_width="371dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:hint="Alas C"
        android:inputType="number"
        android:textColor="@color/black"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alas2" />

    <EditText
        android:id="@+id/tinggi"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="92dp"
        android:hint="Tinggi"
        android:inputType="number"
        android:textColor="@color/black"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alas2" />

    <Button
        android:id="@+id/btn_segitiga"
        android:layout_width="376dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:text="Hitung Segitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tinggi" />

    <TextView
        android:id="@+id/hasilsegitiga"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hasil"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_segitiga" />

    <TextView
        android:id="@+id/luasS"
        android:layout_width="72dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:text="Luas :"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasilsegitiga" />

    <TextView
        android:id="@+id/kelilingS"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="Keliling :"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luasS" />

    <TextView
        android:id="@+id/luasS1"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="48dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_segitiga" />

    <TextView
        android:id="@+id/kelilingS1"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luasS1" />

</androidx.constraintlayout.widget.ConstraintLayout>