<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Persegi">

    <TextView
        android:id="@+id/judulpersegi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Perhitungan Persegi"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/panjang"
        android:layout_width="371dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:hint="Panjang"
        android:inputType="number"
        android:textColor="@color/black"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulpersegi" />

    <EditText
        android:id="@+id/lebar"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:hint="Lebar"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panjang" />

    <Button
        android:id="@+id/btn_persegi"
        android:layout_width="376dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:text="Hitung Persegi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lebar" />

    <TextView
        android:id="@+id/hasilpersegi"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hasil"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_persegi" />

    <TextView
        android:id="@+id/luas"
        android:layout_width="72dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:text="Luas :"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasilpersegi" />

    <TextView
        android:id="@+id/keliling"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="Keliling :"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luas" />

    <TextView
        android:id="@+id/luas1"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="40dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_persegi" />

    <TextView
        android:id="@+id/keliling1"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luas1" />

</androidx.constraintlayout.widget.ConstraintLayout>