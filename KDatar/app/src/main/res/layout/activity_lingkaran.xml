<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lingkaran">

    <TextView
        android:id="@+id/judullingkaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Perhitungan Lingkaran"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/diameter"
        android:layout_width="371dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:hint="Diameter"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judullingkaran" />

    <Button
        android:id="@+id/btn_lingkaran"
        android:layout_width="376dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:text="Hitung Lingkaran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diameter" />

    <TextView
        android:id="@+id/hasillingkaran"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hasil"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lingkaran" />

    <TextView
        android:id="@+id/luasL"
        android:layout_width="72dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:text="Luas :"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasillingkaran" />

    <TextView
        android:id="@+id/kelilingL"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="Keliling :"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luasL" />

    <TextView
        android:id="@+id/luasL1"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lingkaran" />

    <TextView
        android:id="@+id/kelilingL1"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luasL1" />

</androidx.constraintlayout.widget.ConstraintLayout>